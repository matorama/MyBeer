<p id="notice"><%= notice %></p>

<div class="container">
  <div class="header">
    <h3>
      <%= @post.name %>
    </h3>

    <h4>
      <%= @post.brewery %>
    </h4>
  </div>

  <div class="row">
    <div class="col-md-6" id="post-images">
      <%= image_tag (@post.label) %>
    </div>

    <div class="col-md-6">
      <div class="details">
        <p>
          <strong>Style:</strong>
          <%= @post.style %>
        </p>

        <p>
          <strong>Abv:</strong>
          <%= "#{@post.abv} %"%>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @post.description %>
        </p>
      </div>
    </div>
    
  </div>

  

  



  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
